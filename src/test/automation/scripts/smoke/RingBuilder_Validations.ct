
#Ringbuilder



Open page 'urls.MAIN_URL:loginData.CLIENT_USER:loginData.CLIENT_PASSWORD';

Optional Click on item 'generalPage.CLOSE_MODAL_DIALOG';

Click on item 'mainPage.BUILD_YOU_RING_BUTTON';

Generate value 'RANDOM.metal:min_max:1:6' to 'SAVED.metal';
# Problem with Halo using Classic
Generate value 'RANDOM.ring:min_max:1:6' to 'SAVED.ringCollection';
Calculate value 'RANDOM.ringIndex:1d' plus '1' to 'saved.ringIndex';
Generate value 'RANDOM.diamondIndex:min_max:1:6' to 'SAVED.diamondIndex';

Click on item 'engagementPage.RING_METAL_FILTER_BUTTON';
Click on item 'engagementPage.RING_METAL_FILTER_ITEM_BY_INDEX:SAVED.ringCollection';

Click on item 'engagementPage.RING_COLLECTION_FILTER_BUTTON';
Click on item 'engagementPage.RING_COLLECTION_FILTER_ITEM_BY_INDEX:SAVED.metal';


# Random ring
Click on item 'engagementPage.RING_PRODUCT_ITEM_BY_INDEX:saved.ringIndex';
wait for '5' seconds;
Optional Click on item 'generalPage.CLOSE_CHAT_DIALOG';
Fill data form 'smokeData.RING_BUILDER_EXAMPLE_DATA';

Save element text 'engagementPage.RING_METAL_SELECT' to 'SAVED.ringMetal';
Save value 'Round' to 'SAVED.ringShape';
Optional Save element text 'engagementPage.RING_SHAPE_SELECT' to 'SAVED.ringShape';
Save element text 'engagementPage.RING_PRONG_SELECT' to 'SAVED.ringProng';
Save element text 'engagementPage.RING_SIZE_SELECT' to 'SAVED.ringSize';
Save element text 'engagementPage.RING_PRICE_LABEL' to 'SAVED.ringPrice';
Save element text 'engagementPage.RING_NAME_LABEL' to 'SAVED.ringName';

Optional Click on item 'generalPage.CLOSE_CHAT_DIALOG';
Optional Click on item 'generalPage.CLOSE_MODAL_DIALOG';

Click on item 'engagementPage.CHOSE_THIS_SETTING_BUTTON';
Optional Click on item 'engagementPage.CHOSE_THIS_SETTING_BUTTON';

Wait for '5' seconds;
Optional Click on item 'generalPage.CLOSE_MODAL_DIALOG';
Optional Click on item 'generalPage.CLOSE_CHAT_DIALOG';

Save entity 'diamondsPage.DIAMONDS_TABLE_STRUCTURE' to 'saved.Diamond' by position 'saved.diamondIndex';

Optional Click on item 'generalPage.CLOSE_MODAL_DIALOG';
Optional Click on item 'generalPage.CLOSE_CHAT_DIALOG';

Hover over item 'diamondsPage.VIEW_DIAMOND_BY_PARAMETERS_LOCATOR:saved.Diamond.shape:saved.Diamond.weight:saved.Diamond.color:saved.Diamond.clarity:saved.Diamond.grade:saved.Diamond.price';

Save element text 'diamondsPage.DIAMOND_SPEC_ON_PLP' to 'SAVED.diamondSpecData';

Click on item 'diamondsPage.VIEW_DIAMOND_BY_PARAMETERS_LOCATOR:saved.Diamond.shape:saved.Diamond.weight:saved.Diamond.color:saved.Diamond.clarity:saved.Diamond.grade:saved.Diamond.price';
Optional Click on item 'generalPage.CLOSE_CHAT_DIALOG';

Save element text 'diamondsPage.DIAMOND_NAME_LABEL' to 'SAVED.diamondName';
Save element text 'diamondsPage.DIAMOND_PRICE_LABEL' to 'SAVED.diamondPrice';

Click on item 'diamondsPage.ADD_TO_RING_BUTTON';

Optional Click on item 'generalPage.CLOSE_CHAT_DIALOG';
Optional Click on item 'generalPage.CLOSE_MODAL_DIALOG';

Save element text 'diamondsPage.RING_NAME_IN_CREATE_YOUR_RING_FORM' to 'SAVED.ringNameOnTopPanel';
Save element text 'diamondsPage.RING_PRICE_IN_CREATE_YOUR_RING_FORM' to 'SAVED.ringPriceOnTopPanel';
Save element text 'diamondsPage.DIAMON_PRICE_IN_CREATE_YOUR_RING_FORM' to 'SAVED.diamondPriceOnTopPanel';
Save element text 'diamondsPage.DIAMOND_WEIGHT_IN_CREATE_YOUR_RING_FORM' to 'SAVED.diamondWeightOnTopPanel';
Save element text 'diamondsPage.DIAMOND_SHAPE_IN_CREATE_YOUR_RING_FORM' to 'SAVED.diamondShapeOnTopPanel';
Save element text 'diamondsPage.RING_TOTAL_PRICE_IN_CREATE_YOUR_RING_FORM' to 'SAVED.ringTotalOnTopPanel';

Save entity 'engagementPage.SELECTED_RING_DETAILS_ENTYTY_LOCATOR' to 'saved.RING_DETAILS_FROM_RINGBUILDER_PAGE' by position last;
Save entity 'engagementPage.SELECTED_DIAMOND_DETAILS_ENTYTY_LOCATOR' to 'saved.DIAMOND_DETAILS_FROM_RINGBUILDER_PAGE' by position last;


Optional Validate value 'SAVED.diamondPrice' equals 'SAVED.diamondPriceOnTopPanel';
Optional Validate value 'SAVED.ringPrice' equals 'SAVED.ringPriceOnTopPanel';
Optional Validate value 'SAVED.ringName' equals 'SAVED.ringNameOnTopPanel';

Calculate value 'saved.ringPrice' plus 'saved.diamondPrice' to 'saved.expectedFullPrice';
Optional Validate value 'SAVED.expectedFullPrice' equals 'SAVED.ringTotalOnTopPanel';


#Optional Validate value  'saved.RING_DETAILS_FROM_RINGBUILDER_PAGE' equals 'SAVED.ringMetal';
#Optional Validate value  'saved.RING_DETAILS_FROM_RINGBUILDER_PAGE' equals 'SAVED.ringShape';
#Optional Validate value  'saved.RING_DETAILS_FROM_RINGBUILDER_PAGE' equals 'SAVED.ringProng';
#Optional Validate value  'saved.RING_DETAILS_FROM_RINGBUILDER_PAGE' equals 'SAVED.ringSize';
#Optional Validate value  'saved.RING_DETAILS_FROM_RINGBUILDER_PAGE' equals 'SAVED.ringName';

Click on item 'engagementPage.ADD_TO_BAG_BUTTON';
Optional Click on item 'generalPage.CLOSE_CHAT_DIALOG';
Optional Click on item 'generalPage.CLOSE_MODAL_DIALOG';
Optional Click on item 'engagementPage.ADD_TO_BAG_BUTTON';

Wait for '10' seconds;

Save element text 'checkoutpage.first_item_in_checkout_info' to 'SAVED.diamondInfoOnCheckoutPage' and 'TRIM';
Save element text 'checkoutpage.second_item_in_checkout_info' to 'SAVED.ringInfoOnCheckoutPage' and 'TRIM';

Click on item 'generalPage.CHECKOUT_BUTTON';
Wait for '20' seconds;
Optional Validate element 'generalPage.LOADING_IMAGE' is invisible;

debug
Optional Click on item 'checkoutPage.EXPAND_DETAILS_OF_ITEMS';
Save element text 'checkoutpage.ITEMS_IN_CART_PRODUCT_DETAILS_PANEL' to 'SAVED.productsInCartOverview' and 'TRIM';
Optional Validate value 'SAVED.productsInCartOverview' contains 'smokeData.DEFAULT_CHECKOUT_RING_DATA_TEMPLATE:saved.RING_DETAILS_FROM_RINGBUILDER_PAGE.StyleNumber:saved.ringName:saved.ringPrice:saved.ringSize:saved.ringMetal:saved.ringShape:saved.ringProng:saved.DIAMOND_DETAILS_FROM_RINGBUILDER_PAGE.SKU';
Optional Validate value 'SAVED.productsInCartOverview' contains 'smokeData.DEFAULT_CHECKOUT_DIAMOND_DATA_TEMPLATE:saved.expectedFullPrice:saved.diamondName:saved.diamondPrice:saved.Diamond.weight:saved.Diamond.color:saved.Diamond.clarity:saved.Diamond.grade';

Fill data form 'smokeData.DEFAULT_CHECKOUT_DATA';
Type value 'smokeData.DEFAULT_CHECKOUT_DATA.Email' to 'generalPage.CHECKOUT_USERNAME_FIELD';
Type value 'smokeData.DEFAULT_CHECKOUT_DATA.StreetAddress' to 'generalPage.CHECKOUT_STREET_ADDRESS_FIELD';

Wait for '3' seconds;

Click on item 'generalPage.NEXT_BUTTON_CHECKOUT_PAGE';
Wait for '20' seconds;

Click on item 'generalPage.CREDIT_CARD_PAYMENT_OPTION';

Type value 'general.DEFAULT_VISA_CARD_NUMBER' to 'generalPage.CREDIT_CARD_NUMBER';
Type value 'general.DEFAULT_VISA_CARD_EXP_MON' to 'generalPage.CREDIT_CARD_EXP_MON';
Type value 'general.DEFAULT_VISA_CARD_EXP_YEAR' to 'generalPage.CREDIT_CARD_EXP_YEAR';
Type value 'general.DEFAULT_VISA_CARD_CVV' to 'generalPage.CREDIT_CARD_CVV';

Click on item 'generalPage.PLACE_ORDER_BUTTON';

#//h1 Thank you for your purchase!
Save element text 'checkoutpage.ORDER_NUMBER_ELEMENT' to 'SAVED.orderSubtotal';
Optional Validate value 'SAVED.expectedFullPrice' equals 'SAVED.orderSubtotal';

Save element text 'checkoutpage.ORDER_NUMBER_ELEMENT' to 'SAVED.orderNumber';
Report message "Order number" "SAVED.orderNumber"







